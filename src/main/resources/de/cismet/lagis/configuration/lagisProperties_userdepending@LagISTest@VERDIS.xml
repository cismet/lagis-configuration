        <Query>
            <wfs:GetFeature version="1.1.0" outputFormat="text/xml; subtype=gml/3.1.1" xmlns:wfs="http://www.opengis.net/wfs">                  
                <!--<wfs:Query xmlns:app="http://www.deegree.org/app" typeName="app:Flurstueck">-->
